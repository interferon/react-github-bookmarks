{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "outDir": "./public",
        "jsx": "react",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowJs": false,
        "baseUrl": ".",
        "paths": {
            "*": [
                "*"
            ]
        },
        "noUnusedLocals": false,
        "strict": true,
        "strictNullChecks": true,
        "disableSizeLimit": true,
        "skipLibCheck": true
    },
    "compileOnSave": false,
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}